# window colors
#                       border              background         text                 indicator
client.focused          #003366           #003366          $text-color         #00ff00
client.unfocused        #000000 	#000000  	$inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent $urgent-bg-color $urgent-bg-color $text-color #00ff00

# Start i3bar to display a workspace bar (plus the system information i3statusjj0
# finds out, if available)
bar {
  	status_command i3status
    workspace_buttons yes
    tray_output primary 
	position bottom
	height 25
	colors {
	    statusline #62a1a9
		background $bg-color
	    separator #757575
		#                  border             background         text
		focused_workspace  #003366 #003366          $text-color
		inactive_workspace #000000 #000000 $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}


